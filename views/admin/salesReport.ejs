    <div style="margin-left: 320px; margin-top: 300px; width: 1100px;" class="container my-5">
        <!-- Report Header -->
        <div class="report-header">
            <h1>Sales Report Form</h1>
            <p class="lead">Download and Submit Sales Data</p>
        </div>

        <!-- Display Message if No Report Data is Found -->
        <% if (!report) { %>
            <p class="alert alert-warning"><%= message %></p>
        <% } else { %>
            <!-- Sales Statistics Form -->
            <form id="salesReport">
                <div class="row text-center" id="salesReports">
                    <div class="col-md-4">
                        <div class="stat-card sales">
                            <h4>Total Orders</h4>
                            <input type="number" name="total_orders" disabled class="form-control" value="<%= report.totalOrders %>">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="stat-card revenue">
                            <h4>Total Amount</h4>
                            <input type="text" name="total_amount" disabled class="form-control" value="Rs<%= report.totalAmount %>">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="stat-card profit">
                            <h4>Total Coupon Discount</h4>
                            <input type="text" name="total_coupon_discount" min="Rs<%= report.totalCoupondiscount %>" max="Rs<%= report.totalCoupondiscount %>" disabled class="form-control" value="Rs<%= report.totalCoupondiscount %>">
                        </div>
                    </div>
                    <!-- Add other fields here similarly -->
                    <div class="col-md-4">
                        <div class="stat-card profit">
                            <h4>Total Cancelled Orders</h4>
                            <input type="number" name="total_delivered_orders" min="<%=report.totalCancelledOrders%>" max="<%=report.totalCancelledOrders%>" disabled class="form-control" value="<%=report.totalCancelledOrders%>">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="stat-card sales">
                            <h4>Total Returned Orders</h4>
                            <input type="number" name="total_returned_orders" disabled min="<%=report.totalReturnedOrders%>" max="<%=report.totalReturnedOrders%>" class="form-control" value="<%=report.totalReturnedOrders%>">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="stat-card revenue">
                            <h4>Total Shipped Orders</h4>
                            <input type="number" name="total_shipped_orders" class="form-control" min="<%=report.totalShippedOrders%>" max="<%=report.totalShippedOrders%>" disabled value="<%=report.totalShippedOrders%>">
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="stat-card sales">
                            <h4>Total Product Offer</h4>
                            <input type="text" name="product_offer" class="form-control" min="<%=report.totalProductOffers%>" max="<%=report.totalProductOffers%>" disabled value="<%=report.totalProductOffers%>">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="stat-card sales">
                            <h4>Total Category Offer</h4>
                            <input type="text" name="product_offer" class="form-control" min="<%=report.totalProductOffers%>" max="<%=report.totalProductOffers%>" disabled value="<%=report.totalProductOffers%>">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="stat-card sales">
                            <h4>Total Delivered Orders</h4>
                            <input type="text" name="product_offer" class="form-control" min="<%=report.totalDeliveredOrders%>" max="<%=report.totalDeliveredOrders%>" disabled value="<%=report.totalDeliveredOrders%>">
                        </div>
                    </div>
                </div>
                

                <!-- Date Filters -->
                <div id="customDateInputs" style="display: none;">
                    <label for="start">Start Date:</label>
                    <input type="date" name="start" id="start">
                    
                    <label for="end">End Date:</label>
                    <input type="date" name="end" id="end">
                </div>
                <!-- Time Range Filters -->
                <div class="row my-4">
                    <!-- <div class="col-md-12 text-center">
                        <button type="button" class="btn btn-outline-primary">Daily</button>
                        <button type="button" class="btn btn-outline-secondary">Weekly</button>
                        <button type="button" class="btn btn-outline-success">Monthly</button>
                        <button type="button" class="btn btn-outline-info">Yearly</button>
                    </div> -->
                    <label for="filter" class="filter-label">Select Report Filter:</label>
                    <form id="salesReportFilterForm" action="your-form-action-url" method="GET">
                        <select name="filter" id="filter" class="styled-select" onchange="handleFilterChange()">
                            <option value="daily" <%= filter === 'daily' ? 'selected' : '' %>>Daily</option>
                            <option value="weekly" <%= filter === 'weekly' ? 'selected' : '' %>>Weekly</option>
                            <option value="monthly" <%= filter === 'monthly' ? 'selected' : '' %>>Monthly</option>
                            <option value="yearly" <%= filter === 'yearly' ? 'selected' : '' %>>Yearly</option>
                            <option value="custom" <%= filter === 'custom' ? 'selected' : '' %>>Custom Range</option>
                        </select>
                        
                        <button type="submit" class="styled-button">Submit</button>
                    </form>

               


                <!-- Submit Button -->
                <!-- <div class="text-center my-4">
                    <button id="downloadPdfButton" class="btn btn-primary">Download as PDF</button>
                </div> -->
                <div class="text-center my-4 d-flex justify-content-center">
                    <button id="downloadPdfButton" class="animated-button me-2">Download PDF</button>
                    <button id="downloadExcelButton" class="animated-button">Download Excel</button>
                </div>
                
                
                

            </form>
        <% } %>
