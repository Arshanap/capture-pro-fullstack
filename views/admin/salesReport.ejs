}

/* Styled Select */
.styled-select {
    padding: 10px;
    border-radius: 5px;
    border: 2px solid #f37821;
    background-color: #fff;
    color: #5a4e3f;
    font-weight: bold;
    transition: all 0.3s;
}

.styled-select:focus {
    border-color: #f37821;
    outline: none;
}

/* Filter Label */
.filter-label {
    font-size: 16px;
    font-weight: bold;
    color: #5a4e3f;
}

/* Buttons */
.styled-button {
    padding: 10px 20px;
    background-color: #f37821; /* Gold color */
    color: #fff;
    border: none;
    border-radius: 5px;
    font-size: 16px;
    font-weight: bold;
    cursor: pointer;
    transition: all 0.3s;
}

.styled-button:hover {
    background-color: #f37821;
}

/* Download Buttons */
.animated-button {
    padding: 10px 20px;
    background-color: #10d81a; /*Gold color*/
    color: #fff;
    border: none;
    border-radius: 5px;
    font-size: 16px;
    font-weight: bold;
    cursor: pointer;
    transition: all 0.3s;
}

.animated-button:hover {
    background-color: #10d81a;
    transform: translateY(-3px);
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
}

/* Input Date Fields */
input[type="date"] {
    border: 2px solid #f37821;
    padding: 8px;
    border-radius: 5px;
    background-color: #fff;
    color: #5a4e3f;
    font-weight: bold;
    transition: border-color 0.3s;
}

input[type="date"]:focus {
    border-color: #f37821;
    outline: none;
}

/* Custom Date Inputs Container */
#customDateInputs {
    margin-top: 20px;
}

/* Form Row Styling */
.row {
    margin-top: 20px;
}

.d-flex {
    display: flex;
}

.justify-content-center {
    justify-content: center;
}

/* Header Styling */
h1, h2, h3, h4, h5, h6 {
    color: #5a4e3f;
    font-weight: bold;
}

/* Custom Scrollbar */
::-webkit-scrollbar {
    width: 8px;
}

::-webkit-scrollbar-thumb {
    background-color: #f37821;
    border-radius: 10px;
}

::-webkit-scrollbar-track {
    background-color: #f8f4e3;
}

