<body>
    <div style="margin-left: 320px; margin-top: 300px; width: 1100px;" class="container my-5">
        <!-- Report Header -->
        <div class="report-header">
            <h1>Sales Report Form</h1>
            <p class="lead">Download and Submit Sales Data</p>
        </div>

        <!-- Display Message if No Report Data is Found -->
        <% if (!report) { %>
            <p class="alert alert-warning"><%= message %></p>
        <% } else { %>
            <!-- Sales Statistics Form -->
            <main>
                <form id="salesReport" method="GET" action="/admin/salesReport">
                    <!-- Filter Section -->
                    <div class="row my-4">
                        <label for="filter" class="filter-label">Select Report Filter:</label>
                        <select name="filter" id="filter" class="styled-select" onchange="handleFilterChange()">
                            <option value="daily" <%= filter === 'daily' ? 'selected' : '' %>>Daily</option>
                            <option value="weekly" <%= filter === 'weekly' ? 'selected' : '' %>>Weekly</option>
                            <option value="monthly" <%= filter === 'monthly' ? 'selected' : '' %>>Monthly</option>
                            <option value="yearly" <%= filter === 'yearly' ? 'selected' : '' %>>Yearly</option>
                            <option value="custom" <%= filter === 'custom' ? 'selected' : '' %>>Custom Range</option>
                        </select>
                    </div>
                    
            
                    <!-- Date Inputs for Custom Range -->
                    <div id="customDateInputs" style="display: none;">
                        <label for="start">Start Date:</label>
                        <input type="date" name="start" id="start" value="<%= start || '' %>">
                        
                        <label for="end">End Date:</label>
                        <input type="date" name="end" id="end" value="<%= end || '' %>">
                    </div>
            
                    <% if (report) { %>
                        <div id="salesReports" class="report-section">
                            <div class="report-summary">
                                <h2>Report Summary</h2>
                                <ul>
                                    <li>Total Orders: <span><%= report.totalOrders %></span></li>
                                    <li>Total Amount: <span>₹<%= report.totalAmount %></span></li>
                                    <li>Total Coupon Discounts: <span>₹<%= report.totalCouponDiscount %></span></li>
                                    <li>Total Delivered Orders: <span><%= report.totalDeliveredOrders %></span></li>
                                    <li>Total Returned Orders: <span><%= report.totalReturnedOrders %></span></li>
                                    <li>Total Shipped Orders: <span><%= report.totalShippedOrders %></span></li>
                                    <li>Total cancel Orders: <span><%= report.totalCancelledOrders %></span></li>
                                    <li>Total Processing Orders: <span><%= report.totalProcessingOrders %></span></li>
                                    <li>Total Pending Orders: <span><%= report.totalPendingOrders %></span></li>
                                    <li>Total Product Offers: <span>₹<%= report.totalProductOffers %></span></li>
                                    <li>Total Category Offers: <span>₹<%= report.totalCategoryOffer %></span></li>
                                </ul>
                            </div>
                        </div>
                    <% } else { %>
                        <p><%= message || 'No data available for the selected filter.' %></p>
                    <% } %>
            
                    <!-- Submit Button -->
                    <div class="text-center my-4 d-flex justify-content-center">
                        <button type="submit" class="styled-button me-2">Filter Report</button>
                    </div>
                </form>
            
                <!-- Download Buttons -->
                <div class="text-center my-4 d-flex justify-content-center">
                    <button id="downloadPdfButton" class="animated-button me-2">Download PDF</button>
                    <!-- <button id="downloadExcelButton" class="animated-button">Download Excel</button> -->
                </div>
            </main>
            
        <% } %>
    </div>
