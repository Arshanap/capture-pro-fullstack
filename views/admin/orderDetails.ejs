    /* General Container Styling */
.order-details-container {
  max-width: 800px;
  margin: 20px auto;
  padding: 20px;
  border: 1px solid #ddd;
  border-radius: 8px;
  background-color: #fff;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

/* Title Styling */
.order-details-title {
  text-align: center;
  font-size: 24px;
  font-weight: bold;
  margin-bottom: 20px;
}

/* Order Overview Styling */
.order-overview,
.address-info,
.payment-info,
.product-list,
.order-summary {
  margin-bottom: 20px;
}

.order-overview div,
.summary-item {
  display: flex;
  justify-content: space-between;
  padding: 5px 0;
  font-size: 16px;
}

.order-overview div strong,
.summary-item strong {
  font-weight: bold;
}

/* Address & Payment Info Styling */
.address-info h2,
.payment-info h2,
.product-list h2,
.order-summary h2 {
  font-size: 18px;
  margin-bottom: 10px;
}

.address-info p,
.payment-info p {
  margin: 5px 0;
}

/* Product List Styling */
.product-list {
  border-top: 1px solid #ddd;
  padding-top: 10px;
}

.product-item {
  display: flex;
  align-items: center;
  margin-bottom: 15px;
}

.product-image {
  width: 80px;
  height: 80px;
  object-fit: cover;
  border-radius: 4px;
  margin-right: 15px;
}

.product-info {
  font-size: 14px;
}

.product-name {
  font-weight: bold;
  margin-bottom: 5px;
}

.product-quantity,
.product-price {
  color: #555;
}

/* Order Summary Styling */
.order-summary {
  border-top: 1px solid #ddd;
  padding-top: 10px;
}

.summary-item {
  font-size: 16px;
}

.summary-item.total {
  font-size: 18px;
  font-weight: bold;
}

/* Box Styling */
.order-details-container {
  box-sizing: border-box;
}

     .breadcrumb {
