        <div class="order-details-container">
            <h1 class="order-details-title">Order Details</h1>
            
            <!-- Order Overview -->
            <div class="order-overview">
                <div class="order-id">
                    <strong>Order ID:  <%=order.orderId%></strong> 
                </div>
                <div class="order-date">
                    <strong>Order Date:  <%=order.createdOn.toDateString()%></strong> 
                </div>
                <div class="order-status">
                    <strong>Status:</strong> 
                    <% if (order.status === "Cancelled") { %>
                        <span class="badge bg-danger"><%=order.status%></span>
                    <% } else { %>
                        <span class="badge bg-success"><%=order.status%></span>
                    <% } %>
                </div>
            </div>
          
            <!-- Payment Information -->
            <div class="payment-info">
                <h2>Payment Method</h2>
                <p style="color: #4CAF50;"><%=order.paymentMethod%></p>
            </div>
          
            <!-- Product Details -->
            <div class="product-list">
                <h2>Products</h2>
                <% order.orderedItems.forEach((item) => {  %>
                    <div class="product-item">
                      <img src="/uploads/re-image/<%= item.product.productImage[0] %>" alt="Product Image" class="product-image">
                      <div class="product-info">
                        <p class="product-name"><%= item.name %></p>
                        <p class="product-quantity"><strong>Quantity:</strong><%= item.quantity %></p>
                        <p class="product-price"><strong>Price:</strong>₹ <%= item.price.toFixed(2) %></p>
                      </div>
                    </div>
                    <%})%>
            </div>
          
            <!-- Order Summary -->
            <div class="order-summary">
                <h2>Order Summary</h2>
                <div class="summary-item">
                  <span>Subtotal:</span>
                  <span>₹  <%= order.totalPrice.toFixed(2) %></span>
                </div>
                <div class="summary-item">
                  <span>Shipping:</span>
                  <span>₹  00.00</span>
                </div>
                <div class="summary-item">
                  <span>Discount:</span>
                  <span>₹  <%= order.discount %></span>
                </div>
                <div class="summary-item total">
                  <strong>Total:</strong>
                  <strong>₹  <%= order.totalPrice.toFixed(2) %></strong>
                </div>
              </div>
        </div>
