                <tbody>
                    <%for(let i=0;i<data.length;i++){%>
                    <tr>
                        <td><%=i+1%></td>
                        <td><%=data[i].name%></td>
                        <td><%=data[i].email%></td>
                        <td><%=data[i].phone%></td>
                        <td>
                            <% if (data[i].isBlocked === false) { %>
                                <a href="/admin/blockCustomer?id=<%= data[i]._id %>" onclick="return funBlock(event, this.href)">
                                    <button style="margin-right: 25px;" class="btn btn-sm btn-danger">Block</button>
                                </a>
                            <% } else { %>
                                <a href="/admin/unblockCustomer?id=<%=data[i]._id%>" onclick="return fununBlock(event, this.href)">
