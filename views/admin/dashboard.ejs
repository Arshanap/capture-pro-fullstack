            <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
            <script>
                // Fetch labels and data dynamically passed from the backend
                const labels = ['Cancelled', 'Returned', 'Shipped', 'Delivered'];
                const data = <%= chartData %>; // Example: [10, 5, 15, 20]
            
                const ctx = document.getElementById('myChart').getContext('2d');
            
                new Chart(ctx, {
                    type: 'bar',  // Ensure it's a bar chart (not line)
                    data: {
                        labels: labels, // Dynamic labels for the X-axis
                        datasets: [{
                            label: 'Order Status Overview', // Dataset label
                            data: data, // Dynamic data for the chart
                            backgroundColor: [
                                'rgba(255, 99, 132, 0.5)', // Light Red for Total Orders
                                'rgba(54, 162, 235, 0.5)', // Light Blue for Cancelled
                                'rgba(75, 192, 192, 0.5)', // Light Green for Returned
                                'rgba(153, 102, 255, 0.5)', // Light Purple for Shipped
                                'rgba(255, 159, 64, 0.5)' // Light Orange for Delivered
                            ],
                            borderColor: [
                                'rgba(255, 99, 132, 1)', // Dark Red for Total Orders
                                'rgba(54, 162, 235, 1)', // Dark Blue for Cancelled
                                'rgba(75, 192, 192, 1)', // Dark Green for Returned
                                'rgba(153, 102, 255, 1)', // Dark Purple for Shipped
                                'rgba(255, 159, 64, 1)' // Dark Orange for Delivered
                            ],
                            borderWidth: 1 // Border width for the bars
                        }]
                    },
                    options: {
                        responsive: true,
                        scales: {
                            y: {
                                beginAtZero: true, // Start Y-axis from 0
                                title: {
                                    display: true,
                                    text: 'Number of Orders' // Y-axis label
                                }
                            },
                            x: {
                                title: {
                                    display: true,
                                    text: '' // X-axis label
                                }
                            }
                        }
                    }
                });
            </script>
            
            
