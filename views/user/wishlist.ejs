    <script>
        function addToCart(productI, value1) {
        // const value = document.getElementById("quantityInput").value.trim();
    const productId = productI 
    const value = value1
    
    axios.post("/user/addToCart", { value: value, id: productId })
    .then(function(response) {
        console.log("Response received:", response);
        if (response.data.success) {
            Swal.fire({
                position: "top-end",
                icon: "success",
                title: "Product has been saved",
                showConfirmButton: false,
                timer: 1500
            }).then(() => {
                window.reload()
            });
        } else {
            Swal.fire({
                position: "top-end",
                icon: "warning",
                title: "This Product already exist",
                showConfirmButton: false,
                timer: 1500
            });
        }
    })
    .catch(function(error) {
        console.error("Error adding to cart:", error);
        Swal.fire({
            position: "top-end",
            icon: "warning",
            title: "An error occurred during OTP verification.",
            showConfirmButton: false,
            timer: 1500
        });
    });
 }


        async function removeFromWishlist(productId) {
    try {
        const result = await Swal.fire({
            title: "Are you sure?",
            text: "Do you really want to remove this item from the wishlist?",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#d33",
            cancelButtonColor: "#3085d6",
            confirmButtonText: "Yes, remove it!",
            cancelButtonText: "Cancel",
        });

        if (result.isConfirmed) {
            const response = await fetch(`/user/wishlistRemove?id=${productId}`, { method: "DELETE" });

            if (response.ok) {
                location.reload();
            } else {
                console.error("Failed to remove item:", response.statusText);
                Swal.fire("Error", "Failed to remove the item from wishlist", "error");
            }
        }
    } catch (error) {
        console.error("Error in removeFromWishlist:", error);
        Swal.fire("Error", "Something went wrong", "error");
    }
}

