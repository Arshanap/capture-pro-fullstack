async function removeFromWishlist(productId) {
    try {
        const result = await Swal.fire({
            title: "Are you sure?",
            text: "Do you really want to remove this item from the wishlist?",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#d33",
            cancelButtonColor: "#3085d6",
            confirmButtonText: "Yes, remove it!",
            cancelButtonText: "Cancel",
        });

        if (result.isConfirmed) {
            const response = await fetch(`/user/wishlistRemove?id=${productId}`, { method: "DELETE" });

            if (response.ok) {
                location.reload();
            } else {
                console.error("Failed to remove item:", response.statusText);
                Swal.fire("Error", "Failed to remove the item from wishlist", "error");
            }
        }
    } catch (error) {
        console.error("Error in removeFromWishlist:", error);
        Swal.fire("Error", "Something went wrong", "error");
    }
}

