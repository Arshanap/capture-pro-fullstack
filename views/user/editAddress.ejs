        } else if (!nameRegex.test(city)) {
            showError("city", "City must be at least 2 characters long and can only contain letters, spaces, hyphens, and apostrophes.");
            isValid = false;
        }

        // State Validation
        const state = document.getElementById("state").value.trim();
        if (!state) {
            showError("state", "State is required.");
            isValid = false;
        } else if (!nameRegex.test(state)) {
            showError("state", "State must be at least 2 characters long and can only contain letters, spaces, hyphens, and apostrophes.");
            isValid = false;
        }

        // Address Type Validation
        const addressType = document.getElementById("type").value.trim();
        if (!addressType) {
            showError("type", "Address type is required.");
            isValid = false;
        }

        // Phone Validation
        const phone = document.getElementById("phone").value.trim();
        if (!/^\d{10}$/.test(phone)) {
            showError("phone", "Phone number must be 10 digits.");
            isValid = false;
        }

        // Building Name Validation
        const buildingName = document.getElementById("buildingName").value.trim();
        if (!buildingName) {
            showError("buildingName", "Building name is required.");
            isValid = false;
        }

        // Full Address Validation
        const fullAddress = document.getElementById("fullAddress").value.trim();
        if (!fullAddress) {
            showError("fullAddress", "Full address is required.");
            isValid = false;
        }

        return isValid;
    }

    function showError(inputId, message) {
        const inputElement = document.getElementById(inputId);
        const errorMessage = document.createElement("div");
        errorMessage.className = "invalid-feedback";
        errorMessage.innerText = message;
        inputElement.parentNode.appendChild(errorMessage);
        inputElement.classList.add("is-invalid");
    }

    function clearErrors() {
        document.querySelectorAll('.invalid-feedback').forEach(element => element.remove());
        document.querySelectorAll('.form-control').forEach(input => input.classList.remove("is-invalid"));
    }
