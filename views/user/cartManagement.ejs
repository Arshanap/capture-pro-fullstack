<script>

async function decreaseQuantity(productId, maxQuantity) {
    try {
        const quantityInput = document.getElementById(`quantity-${productId}`);
        let currentValue = parseInt(quantityInput.value);

        if (currentValue > 1) {
            const newQuantity = currentValue - 1;
            quantityInput.value = newQuantity;

            // Update server-side quantity
            const response = await axios.post('/user/valueUpdate', {
                productId: productId,
                quantity: newQuantity
            });

            if (response.status === 200) {
                console.log("Quantity decreased successfully:", response.data.message);
                window.location.href = response.data.redirectUrl;
            } else {
                console.error("Failed to decrease quantity:", response.data.message);
            }
        }
        // Call countfun to handle UI validation
        countfun(productId, maxQuantity);
    } catch (error) {
        console.error("Error decreasing quantity:", error.response ? error.response.data : error.message);
        Swal.fire({
            title: "Error!",
            text: "An error occurred while decreasing the quantity.",
            icon: "error",
            showConfirmButton: true
        });
    }
}

async function increaseQuantity(productId, maxQuantity) {
    try {
        const quantityInput = document.getElementById(`quantity-${productId}`);
        let currentValue = parseInt(quantityInput.value);

        if (currentValue < maxQuantity) {
            const newQuantity = currentValue + 1;
            quantityInput.value = newQuantity;

            // Update server-side quantity
            const response = await axios.post('/user/valueUpdate', {
                productId: productId,
                quantity: newQuantity
            });

            if (response.status === 200) {
                console.log("Quantity increased successfully:", response.data.message);
                window.location.href = response.data.redirectUrl;
            } else {
                console.error("Failed to increase quantity:", response.data.message);
            }
        }
        // Call countfun to handle UI validation
        countfun(productId, maxQuantity);
    } catch (error) {
        console.error("Error increasing quantity:", error.response ? error.response.data : error.message);
        Swal.fire({
            title: "Error!",
            text: "An error occurred while increasing the quantity.",
            icon: "error",
            showConfirmButton: true
        });
    }
}



</script>


<script>
    async function removeFromCart(productId) {
  try {
    const result = await Swal.fire({
      title: "Are you sure?",
      text: "Do you really want to remove this item from the cart?",
      icon: "warning",
      showCancelButton: true,
      confirmButtonColor: "#d33",
      cancelButtonColor: "#3085d6",
      confirmButtonText: "Yes, remove it!",
      cancelButtonText: "Cancel",
    });

    if (result.isConfirmed) {
      await fetch(`/user/cartRemove?id=${productId}`, { method: "DELETE" });
      location.reload();
    }
  } catch (error) {
    console.error(error);
  }
}

</script>

<script>
   function countfun(productId, maxQuantity) {
    const messageDiv = document.getElementById(`productError-${productId}`);
    const quantityInput = document.getElementById(`quantity-${productId}`);
    const value = parseInt(quantityInput.value.trim(), 10); // Ensure numeric parsing

    if (isNaN(value)) {
        // Handle invalid input (e.g., if the field is manually cleared)
        messageDiv.textContent = "Invalid quantity value.";
        messageDiv.style.transition = "opacity 0.5s ease";
        messageDiv.style.opacity = "1";
        messageDiv.style.display = "block";
        setTimeout(() => {
            messageDiv.style.opacity = "0";
            messageDiv.style.display = "none";
        }, 6000);
        quantityInput.value = 1; // Reset to a valid default value
        return;
    }

    if (value == maxQuantity) {
        // If the entered value exceeds the maximum stock
        messageDiv.textContent = `Only ${maxQuantity} units available in stock`;
        messageDiv.style.transition = "opacity 0.5s ease";
        messageDiv.style.opacity = "1";
        messageDiv.style.display = "block";
        setTimeout(() => {
            messageDiv.style.opacity = "0";
            messageDiv.style.display = "none";
        }, 6000);
        quantityInput.value = maxQuantity; // Reset input value to maxQuantity
    } else if (value < 1) {
        // If the entered value is less than the minimum allowed (1)
        messageDiv.textContent = "Quantity cannot be less than 1";
        messageDiv.style.transition = "opacity 0.5s ease";
        messageDiv.style.opacity = "1";
        messageDiv.style.display = "block";
        setTimeout(() => {
            messageDiv.style.opacity = "0";
            messageDiv.style.display = "none";
        }, 6000);
        quantityInput.value = 1; // Reset input value to minimum
    } else {
        // Clear the error message if the value is valid
        messageDiv.textContent = '';
        messageDiv.style.opacity = "0";
        messageDiv.style.display = "none";
    }
}


</script>


 
