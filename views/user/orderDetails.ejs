    /* General Container Styling */
.order-details-container {
  max-width: 800px;
  margin: 20px auto;
  padding: 20px;
  border: 1px solid #ddd;
  border-radius: 8px;
  background-color: #fff;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

/* Title Styling */
.order-details-title {
  text-align: center;
  font-size: 24px;
  font-weight: bold;
  margin-bottom: 20px;
}

/* Order Overview Styling */
.order-overview,
.address-info,
.payment-info,
.product-list,
.order-summary {
  margin-bottom: 20px;
}

.order-overview div,
.summary-item {
  display: flex;
  justify-content: space-between;
  padding: 5px 0;
  font-size: 16px;
}

.order-overview div strong,
.summary-item strong {
  font-weight: bold;
}

