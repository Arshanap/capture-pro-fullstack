                    <table style="width: 700px;" class="table table-bordered mb-3">
                        <thead>
                            <tr>
                                <th>Address</th>
                                <th>type</th>
                                <th>Action</th>                                
                            </tr>
                        </thead>
                        <tbody id="addressTable">
                            <% if (addressData.length > 0) { %>  
                                <% addressData.forEach(address => { %>
                                <tr>
                                    <td><p class="card-text">
                                            Building Name: <%= address.address.buildingName %><br>
                                            Address: <%= address.address.address %>, <%= address.address.city %>, <%= address.address.state %>, <%= address.address.pincode %><br>
                                            <strong>Phone:</strong> <%= address.address.phone %><br>
                                        </p>
                                    </td>
                                    <td><%= address.address.addresstype %></td>
                                    <td>
                                        <input type="radio" name="selectedAddress" value="<%= address._id %>" id="address_<%= address._id %>">
                                        <label for="address_<%= address._id %>">Select</label>
                                        <a href="/user/checkoutEditAddress?addressId=<%= address._id %>"><button class="btn btn-secondary">Edit</button></a>
                                </td>
                                </tr>
                                <% }); %>
                            <% } else { %>
                                <p>No addresses found.</p>
                            <% } %>
                        </tbody>
                        
                    </table>
    
                    <!-- New/Edit Address Form -->
    
                    
                    
                </div>

                <!-- address add -->
                <div class="modal fade" id="addAddressModal" tabindex="-1" role="dialog" aria-labelledby="addAddressModalLabel" aria-hidden="true">
