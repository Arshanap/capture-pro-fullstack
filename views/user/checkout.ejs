<script>
    function validateForm() {
    clearErrors();
    let isValid = true;

    const nameRegex = /^[a-zA-Z\s\-']{2,}$/;

    const fullName = document.getElementById("fullName").value.trim();
    if (!fullName) {
        showError("fullName", "Full name is required.");
        isValid = false;
    } else if (!nameRegex.test(fullName)) {
        showError("fullName", "Full name must contain only letters, spaces, hyphens, and apostrophes, and be at least 2 characters long.");
        isValid = false;
    }

    // Validate Pin Code (Exactly 6 digits, no special characters allowed)
    const pinCode = document.getElementById("pinCode").value;
    if (!/^\d{6}$/.test(pinCode)) {
        showError("pinCode", "Pin code must be exactly 6 digits.");
        isValid = false;
    }

    // Validate Phone
    const phone = document.getElementById("Phone").value.trim();
    const phoneRegex = /^(?!.*(\d)\1\1\1)\d{10}$/;
    if (!phone) {
        showError("Phone", "Phone number is required.");
        isValid = false;
    } else if (!phoneRegex.test(phone)) {
        showError("Phone", "Phone number must be 10 digits and cannot contain the same number more than 3 times consecutively.");
        isValid = false;
    }

    // Validate City
    const city = document.getElementById("city").value.trim();
    if (!city) {
        showError("city", "City is required.");
        isValid = false;
    } else if (!nameRegex.test(city)) {
        showError("city", "City must contain only letters, spaces, hyphens, and apostrophes, and be at least 2 characters long.");
        isValid = false;
    }

    // Validate State
    const state = document.getElementById("state").value.trim();
    if (!state) {
        showError("state", "State is required.");
        isValid = false;
    } else if (!nameRegex.test(state)) {
        showError("state", "State must contain only letters, spaces, hyphens, and apostrophes, and be at least 2 characters long.");
        isValid = false;
    }

    const type = document.getElementById("type").value.trim();
    const typeRegex = /^[a-zA-Z\s]{2,}$/; // Only letters and spaces, minimum of 2 characters
    if (!type) {
        showError("type", "Type is required.");
        isValid = false;
    } else if (!typeRegex.test(type)) {
        showError("type", "Type must contain only letters and spaces, and be at least 2 characters long.");
        isValid = false;
    }

    // Validate Building Name
    const buildingName = document.getElementById("buildingName").value.trim();
    const buildingNameRegex = /^[a-zA-Z0-9\s\-]{2,}$/;
    if (!buildingName) {
        showError("buildingName", "Building name is required.");
        isValid = false;
    } else if (!buildingNameRegex.test(buildingName)) {
        showError("buildingName", "Building name must contain only letters, numbers, spaces, and hyphens.");
        isValid = false;
    }

    // Validate Full Address
    const fullAddress = document.getElementById("fullAddress").value.trim();
    const addressRegex = /^[a-zA-Z0-9\s,.-]{5,}$/;
    if (!fullAddress) {
        showError("fullAddress", "Full address is required.");
        isValid = false;
    } else if (!addressRegex.test(fullAddress)) {
        showError("fullAddress", "Full address must contain only letters, numbers, spaces, commas, and periods, and be at least 5 characters long.");
        isValid = false;
    }

    if (isValid) {
        const formData = {
            fullName: fullName,
            pinCode: pinCode,
            type:type,
            city: city,
            state: state,
            buildingName: buildingName,
            phone: phone,
            fullAddress: fullAddress,
        };

        axios.post('/user/checkoutAddAddress', formData)
    .then(response => {
        console.log("Response:", response); // Log the response to inspect its structure
        if (response.data && response.data.success) {
            alert("address adding successful")
        } else {
            alert("address adding no successful")
        }
    })
    .catch(error => {
        alert("Error adding address:", error);
        
    });



    }

    return isValid;
}




    function showError(inputId, message) {
        const inputElement = document.getElementById(inputId);
        const errorMessage = document.createElement("div");
        errorMessage.className = "invalid-feedback";
        errorMessage.innerText = message;
        inputElement.parentNode.appendChild(errorMessage);
        inputElement.classList.add("is-invalid");
    }

    function clearErrors() {
        const errorElements = document.querySelectorAll('.invalid-feedback');
        errorElements.forEach((element) => {
            element.remove();
        });

        const inputElements = document.querySelectorAll('.form-control');
        inputElements.forEach((input) => {
            input.classList.remove("is-invalid");
        });
    }


