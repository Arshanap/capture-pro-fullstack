                </thead>
                <tbody>
                    <% if (proData.length > 0) { %>
                        <% for (let i = 0; i < proData.length; i++) { %>
                    <tr>
                        <td><%=i+1%></td>
                        <td>
                            <% if (proData[i].productImage && proData[i].productImage.length > 0) { %>
                                <img src="/uploads/re-image/<%= proData[i].productImage[0] %>" alt="Product Image" style="max-width: 100px;">
                            <% } else { %>
                                <img src="/path/to/default-image.jpg" alt="Default Image" style="max-width: 100px;">
                            <% } %>
                            <span class="ml-2"></span>                                
                        </td>
                        <td><%= proData[i].productName %></td>
                        <td><%= proData[i].quantity %></td>
                        <td>₹ <%= Number(proData[i].price).toFixed(2) %></td>
                        <td>₹ <%= Number(proData[i].totalPrice).toFixed(2) %></td>
                    </tr>
                    <% } %>
                    <% } else { %>
                        <tr>
                            <td colspan="5" class="text-center">Your cart is empty.</td>
                        </tr>
                    <% } %>
                </tbody>
